---
import 'simple-notify/dist/simple-notify.css';
import '@/assets/styles/preline-main.min.css';
import Header from "@/components/admin/Header.astro";
import Breadcrumb from "@components/admin/Breadcrumb.astro"
import Sidebar from "@/components/admin/Sidebar.astro";


const {title, lang = 'es', codec = 'UTF-8'} = Astro.props

interface Props {
  title?: string;
  lang?: string
  codec?: string
}

const token = Astro.cookies.get("authToken")?.value ?? "";
if (!token) { return Astro.redirect('/?message=sessionExpired', 302); }

---
<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset={codec}>
  <title>{title}</title>

  <!-- Configuración de tema -->
  <script is:inline>
    if (
      localStorage.getItem("hs_theme") === "dark" ||
      (!("|" in localStorage) &&
        window.matchMedia("(prefers-color-scheme: dark)").matches)
    ) {
      document.documentElement.classList.add("dark");
    } else {
      document.documentElement.classList.remove("dark");
    }
  </script>
</head>

<body class="bg-neutral-200 selection:bg-yellow-400 selection:text-neutral-700 dark:bg-neutral-800">
  
  <Header></Header>
  <Breadcrumb></Breadcrumb>
  <Sidebar></Sidebar>

  <!-- Main Content -->
  <main class="w-full lg:ps-64">
    <!-- <div class="p-4 sm:p-6 space-y-4 sm:space-y-6"></div> -->
    <div class="p-4 sm:p-6 space-y-4 sm:space-y-6">
      <slot />
    </div>
  </main>
  <!-- End Main Content -->
</body>

<!-- Cargar scripts necesarios DESPUÉS del body -->
<script is:inline>
  // Deshabilitar auto-init de Preline
  window.HSConfig = { autoInit: false };
</script>

<script>
  // Importar dependencias de Preline
  import 'preline/dist/preline.js';
</script>

<!-- Inicializar Preline después de que Vue haya completado la hidratación -->
<script is:inline>
  function initPreline() {
    if (window.HSStaticMethods && typeof window.HSStaticMethods.autoInit === 'function') {
      try {
        window.HSStaticMethods.autoInit();
      } catch (e) {
        // Silenciar errores si el DOM no está listo
        console.debug('Preline init deferred:', e.message);
      }
    }
  }

  // Esperar a que la página esté completamente cargada
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      setTimeout(initPreline, 200);
    });
  } else {
    // DOM ya está listo
    setTimeout(initPreline, 200);
  }

  // También manejar navegación de Astro
  document.addEventListener('astro:page-load', function() {
    setTimeout(initPreline, 200);
  });
</script>
</html>

<script>
  import {getURLParams, getURLMessage} from "@utils/functions.ts"

  const message = getURLParams();
  getURLMessage(message)
</script>

