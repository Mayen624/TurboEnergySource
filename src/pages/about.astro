---
import MainLayout from "@/layouts/MainLayout.astro";
import AboutSection from "@components/sections/misc/AboutSection.vue";
import { SITE } from "@data/constants";

const pageTitle = `Sobre Nosotros | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "AboutPage",
    "@id": "https://turboenergysource.com/about",
    "url": "https://turboenergysource.com/about",
    "name": "Sobre Nosotros | Turbo Energy Source",
    "description": "Conoce a Turbo Energy Source, empresa 100% salvadoreña dedicada a la generación y transmisión de energía eléctrica. Soluciones industriales de calidad.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://turboenergysource.com",
      "name": "Turbo Energy Source",
      "description": "Soluciones eléctricas industriales de alta calidad en El Salvador.",
    },
    "inLanguage": "es-SV"
  }}
>
  <AboutSection client:load />
</MainLayout>
